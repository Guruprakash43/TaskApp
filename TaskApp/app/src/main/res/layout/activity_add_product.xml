<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".AddProduct">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:padding="10sp">

       <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/whiteTransparentHalf"
            android:textColor="@color/white"
            android:maxLength="10"
           android:inputType="number"
            android:hint="Product Id"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/editbg_white"
            android:id="@+id/product_id"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/whiteTransparentHalf"
            android:textColor="@color/white"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/editbg_white"
            android:maxLength="12"
            android:hint="Name"
            android:inputType="text"
            android:id="@+id/product_name"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/editbg_white"
            android:textColorHint="@color/whiteTransparentHalf"
            android:textColor="@color/white"
            android:maxLength="100"
            android:hint="Description"
            android:id="@+id/product_desc"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/editbg_white"
            android:textColorHint="@color/whiteTransparentHalf"
            android:textColor="@color/white"
            android:maxLength="5"
            android:inputType="number"
            android:hint="Stock Quantity"
            android:id="@+id/product_quantity"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/editbg_white"
            android:textColorHint="@color/whiteTransparentHalf"
            android:textColor="@color/white"
            android:maxLength="7"
            android:inputType="number"
            android:hint="Product MRP"
            android:id="@+id/product_mrp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/whiteTransparentHalf"
            android:textColor="@color/white"
            android:hint="Selling Price"
            android:maxLength="7"
            android:inputType="number"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/editbg_white"
            android:id="@+id/product_sp"/>

        <ImageButton
            android:id="@+id/product_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:padding="5dp"
            android:background="@color/colorAccent"
            android:src="@android:drawable/ic_menu_camera" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/product_link"
            android:textColor="@color/colorAccent" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="Add Product"
            android:id="@+id/add_product"
            android:textColor="@color/white"
            android:padding="15dp"
            android:background="@drawable/button_gery_rectangle"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>