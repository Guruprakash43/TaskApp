<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PersonFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:text="Business Name"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:id="@+id/person_name"/>

        <ImageView
            android:layout_width="200sp"
            android:layout_height="200sp"
            android:id="@+id/person_image"
            android:layout_marginTop="20sp"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_marginTop="20sp"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:id="@+id/person_Desc"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textColor="@color/white"
            android:layout_marginTop="15sp"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:id="@+id/person_Add"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hyderabad"
            android:layout_marginTop="10sp"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:id="@+id/person_State"/>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:clickable="false"
            android:isIndicator="true"
            android:id="@+id/person_rat"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:background="@drawable/button_gery_rectangle"
        android:onClick="logoutMe"
        android:src="@android:drawable/ic_lock_power_off"
        tools:ignore="OnClick" />

</RelativeLayout>